{
  "manifest_version": 3,
  "name": "Domain Switcher",
  "version": "1.0.0",
  "description": "Quickly switch between production and local development domains while preserving the URL path",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  }
}
